<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.buildrestore" name="Build Restore" version="1.0.0" provider-name="flavien">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Automated build restore script</summary>
    <description lang="en">Restore a build from a list of add-ons</description>
    <license>GNU General Public License, v2</license>
    <language>en</language>
    <forum></forum>
    <source>https://github.com/flavien/script.buildrestore</source>
    <website>Kodi.tv</website>
    <email>flavien@charlon.net</email>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
    <news>Released the initial version</news>
  </extension>
</addon>
