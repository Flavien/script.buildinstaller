<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.buildinstaller" name="Build Installer" version="1.0.0" provider-name="Flavien">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Add-on installation script</summary>
    <description lang="en">
      Build Installer is a script that automatically installs a list of add-ons from their online repositories. The repositories from which to fetch the add-ons must be preinstalled.
    </description>
    <license>Apache License 2.0</license>
    <language>en</language>
    <source>https://github.com/flavien/script.buildinstaller</source>
    <website>https://github.com/flavien/</website>
    <email>flavien@charlon.net</email>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>
